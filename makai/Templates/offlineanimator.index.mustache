<html>
   <head>
      <meta charset="UTF-8">
      <script src="{{root}}randomous.js?v={{appversion}}"></script>
      <script src="{{root}}randomousCanvas.js?v={{appversion}}"></script>
      <script src="{{root}}chatdraw.js?v={{appversion}}"></script>
      <script src="{{root}}index.js?v={{appversion}}"></script>
      <script src="{{root}}extras.js?v={{appversion}}"></script>
      <script src="{{root}}lz-string.min.js?v={{appversion}}"></script>
      <link rel="stylesheet" href="{{root}}chatdraw.css?v={{appversion}}">
      <link rel="stylesheet" href="{{root}}main.css?v={{appversion}}">
      <style>
         #extras table button, #extras table input
         {
            width: 100%;
            border: 1px solid #C7CFD7;
            border-radius: 0;
         }
         #extras
         {
            font-family: sans-serif;
            padding: 1em;
            background: #f8f8f8;
            color: #333;
            /*background: #F7FAFF;
            color: #334455;*/
         }
         #saveLink
         {
            padding: 0 0.5em;
         }
         #extras a
         {
            text-decoration: underline;
         }
         #extras .header
         {
            padding-bottom: 1em;
         }
         #extras h1
         {
            font-size: 1.5rem;
            margin: 0.1em;
         }
         #extras .annotation
         {
            font-size: 0.7rem;
            padding-left: 1em;
         }
         /*#extras p 
         {
            font-size: 1.5rem;
            margin: 0;
            padding-bottom: 0.5em;
         }*/
      </style>
   </head>
   <body>
      <div class="page">
         <div id="extras">
            <div class="header">
            <h1>"Offline" chatdraw animator</h1>
            <div class="annotation">Click the pencil at the bottom right to get started. <a href="{{root}}help.txt">Help</a></div>
            </div>
            <table>
               <tr>
                  <td>Export Bucket:</td> 
                  <td><input id="bucket" placeholder="Export Bucket" value="chatDrawAnimations"></input></td>
                  <td><a id="seeBucket" target="_blank" href="#">See Bucket</a></td>
               </tr>
               <tr>
                  <td>Save to file:</td>
                  <td><input id="saveName" placeholder="Save file name"></td>
                  <td><button id="generateSave">Generate</button></td>
                  <td><span id="saveLink"></span></td>
               </tr>
               <tr>
                  <td>Load from file:</td>
                  <td><input id="loadFile" type="file"></td>
                  <td><button id="loadAnimation">Load</button></td>
               </tr>
            </table>
         </div>
         <div id="animator">
         </div>
      </div>
   </body>
</html>
